<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView

        android:id="@+id/intents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet"
        android:paddingVertical="28dp"
        android:paddingStart="20dp"
        android:text="Intents"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:paddingStart="80dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:hint="Введите текст"
        android:background="@drawable/edit_text_style"
        android:id="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@+id/intents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText

        android:textSize="16sp"
        android:paddingStart="80dp"
        android:hint="Введите текст "
        android:background="@drawable/edit_text_style"
        android:id="@+id/theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText

        android:textSize="16sp"
        android:paddingStart="80dp"
        android:hint="Введите текст"
        android:background="@drawable/edit_text_style"
        android:id="@+id/sms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:text="SEND"
        android:id="@+id/btn_send"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:backgroundTint="@color/white"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/intents"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@+id/email"
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/sms" />

    <ImageView

        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="@+id/theme"
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/theme"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@+id/sms"
        android:id="@+id/imageView3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/messages" />


</androidx.constraintlayout.widget.ConstraintLayout>